@model List<TasteFoodIt.Entities.Chef>
@{
    ViewBag.Title = "ChefList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count= 0;
}

<div class="container-fluid" id="container-wrapper">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Şef Listesi</h1>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
			<li class="breadcrumb-item">Şefler</li>
			<li class="breadcrumb-item active" aria-current="page">Şef İşlemleri</li>
		</ol>
	</div>

	<div class="row">
		<div class="col-lg-12 mb-4">
			<div class="card">
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				</div>
				<div class="table-responsive">
					<table class="table align-items-center table-flush">
						<thead class="thead-light">
							<tr>
								<th>Şef Id</th>
								<th>Şef Ad Soyad</th>
								<th>Ünvan</th>
								<th>Açıklama</th>
								<th>Resim URL</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@item.NameSurname</td>
									<td>@item.Title</td>
									<td>@item.Description</td>
									<td><img src="@item.ImageUrl" height="100px" width="100px" class="img-thumbnail" /></td>
									<td><a href="/Chef/DeleteChef/@item.ChefId" class="btn btn-danger">Sil</a></td>
									<td><a href="/Chef/UpdateChef/@item.ChefId" class="btn btn-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Chef/CreateChef/" class="btn btn-primary">Yeni Şef Girişi</a>
				</div>
				<div class="card-footer"></div>
			</div>
		</div>
	</div>
</div>

