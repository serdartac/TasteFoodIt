@model List<TasteFoodIt.Entities.Contact>
@{
	ViewBag.Title = "MessageList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Mesaj Listesi</h1>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
			<li class="breadcrumb-item">Mesajlar</li>
			<li class="breadcrumb-item active" aria-current="page">Mesaj İşlemleri</li>
		</ol>
	</div>

	<div class="row">
		<div class="col-lg-12 mb-4">
			<div class="card">
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				</div>
				<div class="table-responsive">
					<table class="table align-items-center table-flush">
						<thead class="thead-light">
							<tr>
								<th>Mesaj Id</th>
								<th>Gönderen</th>
								<th>E-Mail</th>
								<th>Konu</th>
								<th>Tarih</th>
								<th>Mesajı Aç</th>
							</tr>
						</thead>
						<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.NameSurname</td>
										<td>@item.Email</td>
										<td>@item.Subject</td>
										<td>@(((DateTime)item.SendDate).ToString("dd.MM.yyyy"))</td>
										<td><a href="/Contact/ReadMessage/@item.ContactId" class="btn btn-success">Mesaj Detay</a></td>
									</tr>
								}
							</tbody>
					</table>
				</div>
				<div class="card-footer"></div>
			</div>
		</div>
	</div>
</div>