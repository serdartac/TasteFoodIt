@model TasteFoodIt.Entities.Contact
@{
	ViewBag.Title = "ReadMessage";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesaj Detay</h2>

<table class="table table-bordered">
	<tr>
		<td> <b>Gönderen:</b> @Model.NameSurname </td>
	</tr>
	<tr>
		<td><b>Email:</b> @Model.Email</td>
	</tr>
	<tr>
		<td><b>Konu:</b> @Model.Subject</td>
	</tr>
	<tr>
		<td><b>Tarih:</b> @(((DateTime)Model.SendDate).ToString("dd.MM.yyyy"))</td>
	</tr>
	<tr>
		<td><b>Mesaj:</b> @Model.Message</td>
	</tr>
</table>
<a href="/Contact/MessageList/" class="btn btn-primary">Geri Dön</a>

