@model List<TasteFoodIt.Entities.OpenDayHour>
@{
    ViewBag.Title = "OpenDayHourList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Çalışma Saatleri Listesi</h1>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
			<li class="breadcrumb-item">Çalışma Saatleri</li>
			<li class="breadcrumb-item active" aria-current="page">Çalışma Saati İşlemleri</li>
		</ol>
	</div>

	<div class="row">
		<div class="col-lg-12 mb-4">
			<!-- Simple Tables -->
			<div class="card">
				<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				</div>
				<div class="table-responsive">
					<table class="table align-items-center table-flush">
						<thead class="thead-light">
							<tr>
								<th>Id</th>
								<th>Çalışma Günü</th>
								<th>Saat Aralığı</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.OpenDayHourId</td>
									<td>@item.DayName</td>
									<td>@item.OpenHourRange</td>
									<td><a href="/OpenDayHour/DeleteOpenDayHour/@item.OpenDayHourId" class="btn btn-danger">Sil</a></td>
									<td><a href="/OpenDayHour/UpdateOpenDayHour/@item.OpenDayHourId" class="btn btn-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/OpenDayHour/CreateOpenDayHour/" class="btn btn-primary">Yeni Saat Girişi</a>
				</div>
				<div class="card-footer"></div>
			</div>
		</div>
	</div>
</div>

