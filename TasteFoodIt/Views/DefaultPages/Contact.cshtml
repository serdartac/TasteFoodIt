@model TasteFoodIt.Entities.Contact
	
@{
	ViewBag.Title = "Contact";
	Layout = "~/Views/DefaultPages/Index.cshtml";
}

<section class="ftco-section contact-section bg-light">
	<div class="container">
		<div class="row d-flex contact-info">
			<div class="col-md-12">
				<h2 class="h4 font-weight-bold">İletişim Bilgileri</h2>
			</div>
			<div class="w-100"></div>
			<div class="col-md-3 d-flex">
				<div class="dbox">
					<p><span>Adres:</span> 198 West 21th Street, Suite 721 New York NY 10016</p>
				</div>
			</div>
			<div class="col-md-3 d-flex">
				<div class="dbox">
					<p><span>Telefon:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
				</div>
			</div>
			<div class="col-md-3 d-flex">
				<div class="dbox">
					<p><span>Email:</span> <a href="mailto:info@yoursite.com">info@yoursite.com</a></p>
				</div>
			</div>
			<div class="col-md-3 d-flex">
				<div class="dbox">
					<p><span>Website</span> <a href="/Default/Index/">Taste Food It</a></p>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="ftco-section ftco-no-pt contact-section">
	<div class="container">
		<div class="row d-flex align-items-stretch no-gutters">
			<div class="col-md-6 p-5 order-md-last">
				<h2 class="h4 mb-5 font-weight-bold">Bize Mesaj Gönderin</h2>
				@using (Html.BeginForm("SendMessage", "Contact", FormMethod.Post))
				{
					<form action="#" method="post">
						<div class="form-group">
							@Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", id = "name", placeholder = "Ad Soyad" })
						</div>
						<div class="form-group">
							@Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "email", placeholder = "Email" })
						</div>
						<div class="form-group">
							@Html.TextBoxFor(x => x.Subject, new { @class = "form-control", id = "subject", placeholder = "Konu" })
						</div>
						<div class="form-group">
							@Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = "5", placeholder = "Mesajınız" })
						</div>
						<div class="form-group">
							<input type="submit" value="Mesaj Gönder" class="btn btn-primary py-3 px-5">
						</div>
					</form>
				}

			</div>
			<div class="col-md-6 d-flex align-items-stretch">
				<iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d23598.275497141636!2d20.710038407807396!3d42.32579628531253!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sgoogle%20mamu%C5%9Fa!5e0!3m2!1sen!2s!4v1710170203354!5m2!1sen!2s" width="600" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</div>
</section>